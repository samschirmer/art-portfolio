<div id="piece_container">
	<div class="row">
		<div class="col-xs-12 col-lg-3">
			<div id="sidebar">
				<h1><%= @piece.title %></h1>
				<h4><%= @piece.subtitle %></h4>
				<p><%= @piece.description %></p>
			</div>
		</div>
		
		<div class="col-xs-12 col-lg-9">
			<div id="gallery">

				<!-- vimeo video -->
				<% if @piece.id == 13 %>
					<div style="padding:65% 0 0 0;position:relative;">
						<iframe src="https://player.vimeo.com/video/696680562?h=5a5fb94ee0&amp;badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen style="position:absolute;top:0;left:0;width:100%;height:100%;" title="sustainability_touchscreen (Original).mp4"> </iframe>
					</div>
					<script src="https://player.vimeo.com/api/player.js"></script>
				<% end %>

				<% @piece.images.where('visible = 1 AND priority > 0').order(:priority).each do |i| %>
					<div class="image"><a href="/images/pieces/<%= @piece.title.gsub("'",'').parameterize + '/' + i.filename %>"><img src="/images/pieces/<%= @piece.title.gsub("'",'').parameterize + '/' + i.filename %>" /></a></div>
				<% end %>
			</div>
		</div>
	</div>
</div>
