<div id="piece_container">
	<div class="row">
		<div class="col-xs-12 col-md-3">
			<div id="sidebar">
				<h1><%= @piece.title %></h1>
				<h4><%= @piece.subtitle %></h4>
				<p><%= @piece.description %></p>
			</div>
		</div>
		
		<div class="col-xs-12 col-md-9">
			<div id="gallery">
				<% @piece.images.each do |i| %>
					<div class="image"><img src="<%= i.filename %>" /></div>
				<% end %>
			</div>
		</div>
	</div>
</div>
