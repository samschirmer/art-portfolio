<div id="headline">
	<h1>Katelin is a designer based in St. Louis, specializing in identity and web design.</h1>
</div>

<div id="main_container">
<% @pieces.each_with_index do |p, index| %>
	<% case index
		when 0 %>
			<div class="row">
				<div class="col-xs-12 col-lg-4 image_container">
					<a href="/pieces/<%= p.title.parameterize %>-<%= p.id %>"><img class="main_image img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
				  <h3 class="img_title"><%= p.title %></h3>
				  <p class="img_subtitle"><%= p.subtitle %></p>
				</div>
	<% when 1 %>
				<div class="col-xs-12 col-lg-8 image_container">
					<a href="/pieces/<%= p.title.parameterize %>-<%= p.id %>"><img class="main_image img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
				  <h3 class="img_title"><%= p.title %></h3>
				  <p class="img_subtitle"><%= p.subtitle %></p>
				</div>
			</div>
			<div class="row">
	<% when 2..4 %>
			<div class="col-xs-12 col-lg-4 image_container">
					<a href="/pieces/<%= p.title.parameterize %>-<%= p.id %>"><img class="main_image img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
