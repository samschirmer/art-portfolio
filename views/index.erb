<div id="headline">
	<h1>Katelin is a designer based in St. Louis, specializing in identity and web design.</h1>
</div>

<div id="main_container">
<% @pieces.each_with_index do |p, index| %>
	<% case index
		when 0 %>
			<div class="row">
				<div class="col-xs-12 col-md-4">
					<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
					<p class="piece_title"><%= p.title %></p>
					<p class="piece_description"><%= p.description %></p>
				</div>
	<% when 1 %>
				<div class="col-xs-12 col-md-8">
					<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
					<p class="piece_title"><%= p.title %></p>
					<p class="piece_description"><%= p.description %></p>
				</div>
			</div>
			<div class="row">
	<% when 2..4 %>
			<div class="col-xs-12 col-md-4">
				<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
				<p class="piece_title"><%= p.title %></p>
				<p class="piece_description"><%= p.description %></p>
			</div>
	<% when 5 %>
			</div>
			<div class="row">
				<div class="col-xs-12 col-md-8">
					<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
					<p class="piece_title"><%= p.title %></p>
					<p class="piece_description"><%= p.description %></p>
				</div>
	<% when 6 %>
				<div class="col-xs-12 col-md-4">
					<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
					<p class="piece_title"><%= p.title %></p>
					<p class="piece_description"><%= p.description %></p>
				</div>
			</div>
			<div class="row">
	<% when 7..9 %>
			<div class="col-xs-12 col-md-4">
				<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
				<p class="piece_title"><%= p.title %></p>
				<p class="piece_description"><%= p.description %></p>
			</div>
	<% when 10 %>
			</div>
			<div class="row">
				<div class="col-xs-12 col-md-4">
					<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
					<p class="piece_title"><%= p.title %></p>
					<p class="piece_description"><%= p.description %></p>
				</div>
	<% when 11 %>
				<div class="col-xs-12 col-md-8">
					<a href="/pieces/<%= p.id %>"><img class="img img-fluid" src="<%= p.images.find_by(main: 1).filename %>" /></a>
					<p class="piece_title"><%= p.title %></p>
					<p class="piece_description"><%= p.description %></p>
				</div>
			</div>
	<% end %>
<% end %>
</div>


